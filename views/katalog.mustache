<main>
    <section class="searchResult">
        {{#q}}
        <h2>Searched phrase: "{{q}}" ({{itemCount}})</h2>
    {{/q}}
    {{#category}}
    <h2>{{category}}: {{itemCount}} items</h2>
{{/category}}
<ul class="search-categories">
    {{#inCategories}}
    <li>
        <a href="/~husarma1/katalog/?q={{q}}&category={{category}}">{{label}} ({{count}})</a>
    </li>
{{/inCategories}}
</ul>
<ul class="search-items">
    {{#listItems}}
    <li>
        <a href="/~husarma1/item/details/?id={{item.id}}">
            {{#item.imageFormat}}
            <img src="/~husarma1/public/images/{{item.id}}.{{item.imageFormat}}"
                 alt="{{item.name}} image">
        {{/item.imageFormat}}
        {{^item.imageFormat}}
        <img src="/~husarma1/public/images/noImage.png" alt="No image">
    {{/item.imageFormat}}
    <p>{{item.name}}</p>
    <p>Quantity: {{item.quantity}} pcs</p>
</a>
</li>
{{/listItems}}
</ul>
{{#page}}
<nav>
    {{#prevPage}}
    <a href="/~husarma1/katalog/?{{pageRequest}}page={{prevPage}}"><</a>
{{/prevPage}}
{{^prevPage}}
<br>
{{/prevPage}}
<p>{{page}}</p>
{{#nextPage}}
<a href="/~husarma1/katalog/?{{pageRequest}}page={{nextPage}}">></a>
{{/nextPage}}
{{/page}}
</nav>
</section>
</main>
